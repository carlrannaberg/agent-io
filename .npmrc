# npm configuration for @agent-io organization

# Ensure all packages in @agent-io scope are public by default
@agent-io:registry=https://registry.npmjs.org/
access=public

# Enable 2FA for publishing
# Note: This requires npm 2FA to be enabled on the account
# publish-requires-tfa=true

# Ignore scripts during install for security
ignore-scripts=false

# Save exact versions in package.json
save-exact=true

# Use lockfile version 3 for better performance
lockfile-version=3

# Audit settings
audit-level=moderate

# Engine strict mode
engine-strict=true